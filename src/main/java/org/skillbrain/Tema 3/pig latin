public class PigLatin {
    public static void main(String[] args){

  String I;
        String most;
        String the;

        String sentence =”I sleep most of the night ”;
        String regex;
        String AY;
        String English;
        String t;
        //IAY LEPTSAY  OSTMAY  FOAY  HETAY IGHTNAY
        String[] arr =sentence.split(regex : ” ”);

        String result = ”  ” ;
        for (int i=0; i<arr.length;i++){
            if (i==0){
                result +=arr[i] + ”AY” ;
            }else {
                char ch = arr [i].charAt(0);
                result+=arr[i].substring(1)+ ” ”+ ch + ”AY”;
                System.out.println(”English:\ t” +sentence+”n Pig Latin:\t” + result);
            }
        }